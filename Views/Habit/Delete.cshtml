@model HabitTrackerApp.Models.Habit
@{
  ViewData["Title"] = "Delete Habit";
}

<h2 class="mt-4 text-center">Delete Habit</h2>

<div class="alert alert-warning text-center">
  <strong>Are you sure?</strong> This action cannot be undone.
</div>

<div class="text-center">
  <h4>@Model.Name</h4>
  <p>@Model.Description</p>
</div>

<form asp-action="Delete" method="post" class="mt-3 text-center">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>