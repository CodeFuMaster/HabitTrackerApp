<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HabitTrackerApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HabitTrackerApp.MAUI"
    xmlns:views="clr-namespace:HabitTrackerApp.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Habitify">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#6366F1" HeightRequest="150">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="âš¡" FontSize="32" TextColor="White" HorizontalOptions="Center" />
                <Label Text="Habitify" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                <Label Text="Build Better Habits" FontSize="14" TextColor="White" Opacity="0.9" HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Dashboard Section -->
    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent Title="Overview" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <!-- Habits Section -->
    <FlyoutItem Title="Habits" Icon="list.png">
        <ShellContent Title="All Habits" Route="HabitListPage" ContentTemplate="{DataTemplate views:HabitListPage}" />
        <ShellContent Title="Daily View" Route="DailyViewPage" ContentTemplate="{DataTemplate views:DailyViewPage}" />
        <ShellContent Title="Weekly View" Route="WeeklyViewPage" ContentTemplate="{DataTemplate views:WeeklyViewPage}" />
    </FlyoutItem>

    <!-- Organization Section -->
    <FlyoutItem Title="Organize" Icon="folder.png">
        <ShellContent Title="Categories" Route="CategoriesPage" ContentTemplate="{DataTemplate views:CategoriesPage}" />
        <ShellContent Title="Statistics" Route="StatisticsPage" ContentTemplate="{DataTemplate views:StatisticsPage}" />
    </FlyoutItem>

</Shell>
