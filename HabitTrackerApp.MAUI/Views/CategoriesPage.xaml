<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.MAUI.Views.CategoriesPage"
             xmlns:viewmodels="clr-namespace:HabitTrackerApp.MAUI.ViewModels"
             x:DataType="viewmodels:CategoriesViewModel"
             Title="Categories">

    <ContentPage.BindingContext>
        <viewmodels:CategoriesViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="#6366F1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" VerticalOptions="Center">
                    <Label Text="Organize Your Habits"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Manage categories to group your habits"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9" />
                </StackLayout>

                <Button Grid.Column="1"
                        Text="+"
                        FontSize="24"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="White"
                        BorderWidth="1"
                        CornerRadius="20"
                        HeightRequest="40"
                        WidthRequest="40"
                        Command="{Binding AddCategoryCommand}" />
            </Grid>
        </Border>

        <!-- Categories List -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout Spacing="15">
                <!-- Search Bar -->
                <SearchBar Text="{Binding SearchText}"
                          Placeholder="Search categories..."
                          BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                          PlaceholderColor="#6B7280" />

                <!-- Categories Collection -->
                <CollectionView ItemsSource="{Binding FilteredCategories}"
                              BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                       StrokeThickness="0"
                                       Padding="20">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0"
                                               BackgroundColor="#6366F1"
                                               WidthRequest="50"
                                               HeightRequest="50"
                                               VerticalOptions="Center"
                                               Margin="0,0,15,0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="25" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding IconEmoji, FallbackValue='📁'}"
                                                   FontSize="24"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>

                                        <!-- Category Info -->
                                        <StackLayout Grid.Column="1" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="#6B7280" />
                                            <Label Text="{Binding HabitsCount, StringFormat='{0} habits'}"
                                                   FontSize="12"
                                                   TextColor="#6366F1" />
                                        </StackLayout>

                                        <!-- Actions -->
                                        <StackLayout Grid.Column="2" 
                                                   Orientation="Horizontal"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center"
                                                   Spacing="10">
                                            <Button Text="✏️"
                                                    BackgroundColor="Transparent"
                                                    TextColor="#6B7280"
                                                    FontSize="16"
                                                    CornerRadius="15"
                                                    HeightRequest="30"
                                                    WidthRequest="30"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoriesViewModel}}, Path=EditCategoryCommand}"
                                                    CommandParameter="{Binding}" />
                                            <Button Text="🗑️"
                                                    BackgroundColor="Transparent"
                                                    TextColor="#EF4444"
                                                    FontSize="16"
                                                    CornerRadius="15"
                                                    HeightRequest="30"
                                                    WidthRequest="30"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoriesViewModel}}, Path=DeleteCategoryCommand}"
                                                    CommandParameter="{Binding}" />
                                        </StackLayout>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Empty State -->
                <StackLayout IsVisible="{Binding IsEmpty}"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Spacing="20">
                    <Label Text="📁"
                           FontSize="64"
                           HorizontalOptions="Center"
                           TextColor="#6B7280" />
                    <Label Text="No Categories Yet"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#6B7280" />
                    <Label Text="Create your first category to organize your habits"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="#6B7280" />
                    <Button Text="Add Category"
                            BackgroundColor="#6366F1"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            WidthRequest="150"
                            Command="{Binding AddCategoryCommand}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="2"
                         IsVisible="{Binding IsLoading}"
                         IsRunning="{Binding IsLoading}"
                         Color="#6366F1"
                         VerticalOptions="Center"
                         HorizontalOptions="Center" />
    </Grid>
</ContentPage>