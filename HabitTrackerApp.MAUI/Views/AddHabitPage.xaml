<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.MAUI.Views.AddHabitPage"
             Title="Add New Habit">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <Entry x:Name="NameEntry"
                  Placeholder="Habit Name (e.g., 'Tuesday Gym', 'Morning Routine')"
                  FontSize="16" />
            
            <Editor x:Name="DescriptionEditor"
                   Placeholder="Habit Description"
                   HeightRequest="100"
                   FontSize="14" />
            
            <Button Text="Save Habit"
                   Clicked="OnSaveClicked"
                   BackgroundColor="{AppThemeBinding Light=#007ACC, Dark=#4FC3F7}"
                   TextColor="White"
                   FontSize="16"
                   FontAttributes="Bold"
                   CornerRadius="25"
                   HeightRequest="50" />
                   
            <Label Text="Quick Templates:"
                  FontSize="16"
                  FontAttributes="Bold"
                  Margin="0,20,0,10" />
            
            <Button Text="Tuesday Gym Routine"
                   Clicked="OnTuesdayGymClicked"
                   BackgroundColor="{AppThemeBinding Light=#28A745, Dark=#34C759}"
                   TextColor="White"
                   CornerRadius="20" />
            
            <Button Text="Morning Routine"
                   Clicked="OnMorningRoutineClicked"
                   BackgroundColor="{AppThemeBinding Light=#FFC107, Dark=#FFD60A}"
                   TextColor="Black"
                   CornerRadius="20" />
            
            <Button Text="BJJ Training"
                   Clicked="OnBJJClicked"
                   BackgroundColor="{AppThemeBinding Light=#DC3545, Dark=#FF453A}"
                   TextColor="White"
                   CornerRadius="20" />
        </StackLayout>
    </ScrollView>
</ContentPage>