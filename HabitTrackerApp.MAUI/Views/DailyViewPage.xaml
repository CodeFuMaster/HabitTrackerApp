<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.MAUI.Views.DailyViewPage"
             xmlns:viewmodels="clr-namespace:HabitTrackerApp.MAUI.ViewModels"
             x:DataType="viewmodels:DailyViewViewModel"
             Title="Daily View">

    <ContentPage.BindingContext>
        <viewmodels:DailyViewViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Date Navigation -->
        <Border Grid.Row="0" 
                BackgroundColor="#6366F1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="‹" 
                        FontSize="24"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        Command="{Binding PreviousDayCommand}" />

                <StackLayout Grid.Column="1" 
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                    <Label Text="{Binding SelectedDate, StringFormat='{0:dddd}'}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding SelectedDate, StringFormat='{0:MMMM dd, yyyy}'}"
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </StackLayout>

                <Button Grid.Column="2"
                        Text="›" 
                        FontSize="24"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        Command="{Binding NextDayCommand}" />
            </Grid>
        </Border>

        <!-- Quick Stats -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#1F2937}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="{Binding CompletedCount}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#10B981"
                           HorizontalOptions="Center" />
                    <Label Text="Completed" 
                           FontSize="12" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="{Binding TotalCount}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#6366F1"
                           HorizontalOptions="Center" />
                    <Label Text="Total" 
                           FontSize="12" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label Text="{Binding CompletionRate, StringFormat='{0:P0}'}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#F59E0B"
                           HorizontalOptions="Center" />
                    <Label Text="Rate" 
                           FontSize="12" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Habits List -->
        <ScrollView Grid.Row="2" Padding="15">
            <CollectionView ItemsSource="{Binding DailyHabits}"
                          BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,5">
                            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                   StrokeThickness="0"
                                   Padding="20">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" VerticalOptions="Center">
                                        <Label Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding ShortDescription}"
                                               FontSize="14"
                                               TextColor="#6B7280" />
                                        <Label Text="{Binding Category.Name, StringFormat='Category: {0}'}"
                                               FontSize="12"
                                               TextColor="#6B7280" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" 
                                               HorizontalOptions="End"
                                               VerticalOptions="Center">
                                        <Button Text="{Binding IsCompleted, Converter={StaticResource BoolToCompletedTextConverter}}"
                                                BackgroundColor="{Binding IsCompleted, Converter={StaticResource BoolToCompletedColorConverter}}"
                                                TextColor="White"
                                                FontSize="14"
                                                CornerRadius="20"
                                                HeightRequest="40"
                                                WidthRequest="100"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DailyViewViewModel}}, Path=ToggleHabitCommand}"
                                                CommandParameter="{Binding}" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="3"
                         IsVisible="{Binding IsLoading}"
                         IsRunning="{Binding IsLoading}"
                         Color="#6366F1"
                         VerticalOptions="Center"
                         HorizontalOptions="Center" />
    </Grid>
</ContentPage>