<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.MAUI.Views.WeeklyViewPage"
             xmlns:viewmodels="clr-namespace:HabitTrackerApp.MAUI.ViewModels"
             x:DataType="viewmodels:WeeklyViewViewModel"
             Title="Weekly View">

    <ContentPage.BindingContext>
        <viewmodels:WeeklyViewViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Week Navigation -->
        <Border Grid.Row="0" 
                BackgroundColor="#6366F1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="‹" 
                        FontSize="24"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        Command="{Binding PreviousWeekCommand}" />

                <StackLayout Grid.Column="1" 
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                    <Label Text="{Binding WeekTitle}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding WeekDateRange}"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </StackLayout>

                <Button Grid.Column="2"
                        Text="›" 
                        FontSize="24"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        Command="{Binding NextWeekCommand}" />
            </Grid>
        </Border>

        <!-- Week Overview Stats -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#1F2937}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="{Binding WeeklyCompletedCount}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#10B981"
                           HorizontalOptions="Center" />
                    <Label Text="Completed" 
                           FontSize="11" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="{Binding WeeklyTotalCount}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#6366F1"
                           HorizontalOptions="Center" />
                    <Label Text="Total" 
                           FontSize="11" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label Text="{Binding WeeklyCompletionRate, StringFormat='{0:P0}'}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#F59E0B"
                           HorizontalOptions="Center" />
                    <Label Text="Rate" 
                           FontSize="11" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Column="3" HorizontalOptions="Center">
                    <Label Text="{Binding WeeklyStreak}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#EF4444"
                           HorizontalOptions="Center" />
                    <Label Text="Streak" 
                           FontSize="11" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Weekly Habits Grid -->
        <ScrollView Grid.Row="2" Padding="15">
            <StackLayout>
                <!-- Days of Week Header -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Text="Habit" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" />
                    <Label Grid.Column="1" Text="Mon" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="2" Text="Tue" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="3" Text="Wed" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="4" Text="Thu" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="5" Text="Fri" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="6" Text="Sat" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                    <Label Grid.Column="7" Text="Sun" FontAttributes="Bold" FontSize="12" TextColor="#6B7280" HorizontalOptions="Center" />
                </Grid>

                <!-- Habits List -->
                <CollectionView ItemsSource="{Binding WeeklyHabits}" BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                       StrokeThickness="0"
                                       Padding="15,10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Habit Name -->
                                        <StackLayout Grid.Column="0" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation" />
                                        </StackLayout>

                                        <!-- Monday -->
                                        <Button Grid.Column="1"
                                                Text="{Binding MondayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding MondayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Tuesday -->
                                        <Button Grid.Column="2"
                                                Text="{Binding TuesdayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding TuesdayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Wednesday -->
                                        <Button Grid.Column="3"
                                                Text="{Binding WednesdayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding WednesdayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Thursday -->
                                        <Button Grid.Column="4"
                                                Text="{Binding ThursdayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding ThursdayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Friday -->
                                        <Button Grid.Column="5"
                                                Text="{Binding FridayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding FridayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Saturday -->
                                        <Button Grid.Column="6"
                                                Text="{Binding SaturdayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding SaturdayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />

                                        <!-- Sunday -->
                                        <Button Grid.Column="7"
                                                Text="{Binding SundayStatus, Converter={StaticResource CompletionStatusToTextConverter}}"
                                                BackgroundColor="{Binding SundayStatus, Converter={StaticResource CompletionStatusToColorConverter}}"
                                                TextColor="White"
                                                FontSize="12"
                                                CornerRadius="15"
                                                HeightRequest="30"
                                                WidthRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:WeeklyViewViewModel}}, Path=ToggleDayCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="Center" />
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="3"
                         IsVisible="{Binding IsLoading}"
                         IsRunning="{Binding IsLoading}"
                         Color="#6366F1"
                         VerticalOptions="Center"
                         HorizontalOptions="Center" />
    </Grid>
</ContentPage>