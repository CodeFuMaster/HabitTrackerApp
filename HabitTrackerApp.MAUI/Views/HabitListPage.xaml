<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HabitTrackerApp.MAUI.ViewModels"
             xmlns:models="clr-namespace:HabitTrackerApp.Core.Models;assembly=HabitTrackerApp.Core"
             x:Class="HabitTrackerApp.MAUI.Views.HabitListPage"
             x:DataType="vm:HabitListViewModel"
             Title="All Habits">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="#6366F1"
                Padding="20,15">
            <StackLayout>
                <Label Text="My Habits"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="Track and manage your daily routines"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.9"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Border>

        <!-- Filter Buttons -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#1F2937}"
                Padding="20,15">
            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center"
                        Spacing="10">
                <Button Text="Active"
                        BackgroundColor="{Binding ActiveFilterSelected, Converter={StaticResource BoolToFilterColorConverter}}"
                        TextColor="{Binding ActiveFilterSelected, Converter={StaticResource BoolToFilterTextColorConverter}}"
                        FontSize="14"
                        CornerRadius="20"
                        HeightRequest="35"
                        WidthRequest="80"
                        Command="{Binding FilterActiveCommand}" />
                        
                <Button Text="Deleted"
                        BackgroundColor="{Binding DeletedFilterSelected, Converter={StaticResource BoolToFilterColorConverter}}"
                        TextColor="{Binding DeletedFilterSelected, Converter={StaticResource BoolToFilterTextColorConverter}}"
                        FontSize="14"
                        CornerRadius="20"
                        HeightRequest="35"
                        WidthRequest="80"
                        Command="{Binding FilterDeletedCommand}" />
                        
                <Button Text="All"
                        BackgroundColor="{Binding AllFilterSelected, Converter={StaticResource BoolToFilterColorConverter}}"
                        TextColor="{Binding AllFilterSelected, Converter={StaticResource BoolToFilterTextColorConverter}}"
                        FontSize="14"
                        CornerRadius="20"
                        HeightRequest="35"
                        WidthRequest="80"
                        Command="{Binding FilterAllCommand}" />
            </StackLayout>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="2" 
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                Padding="20,10">
            <SearchBar Placeholder="Search your habits..."
                      Text="{Binding SearchText}"
                      BackgroundColor="Transparent"
                      PlaceholderColor="#6B7280" />
        </Border>

        <!-- Habits List -->
        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding RefreshCommand}">
            
            <CollectionView ItemsSource="{Binding Habits}"
                           SelectionMode="None"
                           BackgroundColor="Transparent"
                           Margin="15">
                
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" 
                                VerticalOptions="Center"
                                Padding="40"
                                Spacing="20">
                        <Label Text="📋"
                               FontSize="64"
                               HorizontalOptions="Center"
                               TextColor="#6B7280" />
                        <Label Text="No habits yet!"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#6B7280" />
                        <Label Text="Create your first habit to get started on your journey"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280" />
                        <Button Text="Add Your First Habit"
                                BackgroundColor="#6366F1"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="50"
                                WidthRequest="200"
                                Command="{Binding AddHabitAsyncCommand}" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Habit">
                        <Grid Padding="0,5">
                            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                   StrokeThickness="0"
                                   Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15" />
                                </Border.StrokeShape>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Habit Image -->
                                    <Border Grid.Row="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="15,15,0,0" />
                                        </Border.StrokeShape>
                                        <Image Source="{Binding ImageUrl, FallbackValue='https://via.placeholder.com/400x200.png?text=No+Image'}"
                                               Aspect="AspectFill"
                                               HeightRequest="200" />
                                    </Border>

                                    <!-- Habit Info -->
                                    <StackLayout Grid.Row="1" 
                                                Padding="20,15,20,5">
                                        <Label Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation" />
                                        <Label Text="{Binding ShortDescription}"
                                               FontSize="14"
                                               TextColor="#6B7280"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="{Binding Category.Name, StringFormat='Category: {0}', FallbackValue='No category'}"
                                               FontSize="12"
                                               TextColor="#6366F1" />
                                    </StackLayout>

                                    <!-- Action Buttons -->
                                    <Grid Grid.Row="2"
                                          Padding="15,5,15,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Text="ℹ️"
                                                BackgroundColor="Transparent"
                                                TextColor="#6366F1"
                                                FontSize="18"
                                                CornerRadius="15"
                                                HeightRequest="35"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HabitListViewModel}}, Path=ViewDetailsCommand}"
                                                CommandParameter="{Binding}" />

                                        <Button Grid.Column="1"
                                                Text="📊"
                                                BackgroundColor="Transparent"
                                                TextColor="#6B7280"
                                                FontSize="18"
                                                CornerRadius="15"
                                                HeightRequest="35"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HabitListViewModel}}, Path=ViewStatisticsCommand}"
                                                CommandParameter="{Binding}" />

                                        <Button Grid.Column="2"
                                                Text="✏️"
                                                BackgroundColor="Transparent"
                                                TextColor="#10B981"
                                                FontSize="18"
                                                CornerRadius="15"
                                                HeightRequest="35"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HabitListViewModel}}, Path=EditHabitCommand}"
                                                CommandParameter="{Binding}" />

                                        <Button Grid.Column="3"
                                                Text="🗑️"
                                                BackgroundColor="Transparent"
                                                TextColor="#EF4444"
                                                FontSize="18"
                                                CornerRadius="15"
                                                HeightRequest="35"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HabitListViewModel}}, Path=DeleteHabitCommand}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Add Button -->
        <Border Grid.Row="4"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                Padding="20,15">
            <Button Text="✨ Create New Habit"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Command="{Binding AddHabitAsyncCommand}" />
        </Border>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="0" Grid.RowSpan="5"
                         IsVisible="{Binding IsLoading}"
                         IsRunning="{Binding IsLoading}"
                         Color="#6366F1"
                         VerticalOptions="Center"
                         HorizontalOptions="Center" />
    </Grid>
</ContentPage>