<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HabitTrackerApp.MAUI"
             xmlns:converters="clr-namespace:HabitTrackerApp.MAUI.Converters"
             x:Class="HabitTrackerApp.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:BoolToCompletedTextConverter x:Key="BoolToCompletedTextConverter" />
            <converters:BoolToCompletedColorConverter x:Key="BoolToCompletedColorConverter" />
            <converters:BoolToFilterColorConverter x:Key="BoolToFilterColorConverter" />
            <converters:BoolToFilterTextColorConverter x:Key="BoolToFilterTextColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
