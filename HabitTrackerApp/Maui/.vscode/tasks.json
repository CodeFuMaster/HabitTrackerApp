{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build MAUI App",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Build Android Debug",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"-f",
				"net9.0-android",
				"-c",
				"Debug"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Build Android Release APK",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"publish",
				"-f",
				"net9.0-android",
				"-c",
				"Release"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Deploy to Android Device",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-f",
				"net9.0-android"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		}
	]
}